<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.transportmanagementfrontend">

    <application
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TransportManagementFrontend"
        tools:targetApi="31">

        <!-- MainActivity as the launcher activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:label="@string/login_activity_label" />

        <!-- CustomerRegisterActivity -->
        <activity
            android:name=".CustomerRegisterActivity"
            android:exported="true"
            android:label="@string/register_activity_label"
            android:windowSoftInputMode="adjustResize" />

        <!-- DriverRegisterActivity -->
        <activity
            android:name=".DriverRegisterActivity"
            android:exported="true"
            android:label="@string/register_activity_label"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".TransitCustomerInfoActivity"
            android:exported="true"
            android:label="Transit Customer Info" />

        <activity
            android:name=".ServiceCenterActivity"
            android:exported="true"
            android:label="Service Center" />

        <activity
            android:name=".ComplaintSectionActivity"
            android:exported="true"
            android:label="Complaint Section" />

        <activity
            android:name=".NotificationsActivity"
            android:exported="true"
            android:label="Notifications" />

        <activity
            android:name=".VendorTrackingActivity"
            android:exported="true"
            android:label="Vendor Tracking" />

        <activity
            android:name=".DeliveryConfirmationActivity"
            android:exported="true"
            android:label="Delivery Confirmation" />


        <!-- OwnerRegisterActivity -->
        <activity
            android:name=".OwnerRegisterActivity"
            android:exported="true"
            android:label="@string/register_activity_label"
            android:windowSoftInputMode="adjustResize" />

        <!-- ForgotPasswordActivity -->
        <activity
            android:name=".ForgotPasswordActivity"
            android:exported="true"
            android:label="@string/forgot_password_activity_label" />

        <!-- VerificationCodeActivity -->
        <activity
            android:name=".VerificationCodeActivity"
            android:exported="true"
            android:label="@string/verification_code_activity_label" />

        <!-- ChangePasswordActivity -->
        <activity
            android:name=".ChangePasswordActivity"
            android:exported="true"
            android:label="@string/change_password_activity_label" />

        <!-- HomeActivity -->
        <activity
            android:name=".HomeActivity"
            android:exported="true"
            android:label="@string/home_activity_label" />

        <!-- Customer Home Activity -->
        <activity
            android:name=".CustomerHomeActivity"
            android:exported="true"
            android:label="Customer Home"/>

        <!-- Admin Home Activity -->
        <activity
            android:name=".AdminHomeActivity"
            android:exported="true"
            android:label="Admin Home"/>

        <!-- Owner Home Activity -->
        <activity
            android:name=".OwnerHomeActivity"
            android:exported="true"
            android:label="Owner Home"/>

        <!-- Driver Home Activity -->
        <activity
            android:name=".DriverHomeActivity"
            android:exported="true"
            android:label="Driver Home"/>

        <!-- Profile screen -->
        <activity
            android:name=".OwnerProfileActivity"
            android:exported="true"
            android:label="Profile" />

        <!-- “Other Services” screen -->
        <activity
            android:name=".OtherServicesActivity"
            android:exported="true"
            android:label="Other Services" />

        <!-- Vehicle Order screen -->
        <activity
            android:name=".VehicleOrderActivity"
            android:exported="true"
            android:label="Vehicle Orders" />

        <!-- Vehicle Tracking screen -->
        <activity
            android:name=".VehicleTrackingActivity"
            android:exported="true"
            android:label="Vehicle Tracking" />

        <!-- Payment History screen -->
        <activity
            android:name=".PaymentHistoryActivity"
            android:exported="true"
            android:label="Payment History" />

        <!-- Driver Details (fetched via dialog) -->
        <activity
            android:name=".DriverDetailsActivity"
            android:exported="true"
            android:label="Driver Details" />

        <!-- Admin Section -->
        <activity android:name=".AdminProfileActivity" />
        <activity android:name=".ComplaintActivity" />
        <activity android:name=".BackupActivity" />
        <activity android:name=".UserManagementActivity" />
        <activity android:name=".AnalyticsActivity" />
        <activity android:name=".VehicleManagementActivity" />
        <activity android:name=".OwnerManagementActivity" />
        <activity android:name=".DriverManagementActivity" />
        <activity android:name=".LiveTrackingActivity" />
        <activity android:name=".FinancialManagementActivity" />
        <activity android:name=".DisputeManagementActivity" />

        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

    </application>

    <!-- Required Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- Realtime tracking -->
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>

</manifest>
