<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Original Change Password Layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/other_background"
        android:padding="16dp">

        <!-- Title: Change Password -->
        <TextView
            android:id="@+id/changePasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp" />

        <!-- Description: Enter a new password -->
        <TextView
            android:id="@+id/changePasswordDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter a new password"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_below="@id/changePasswordTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <!-- EditText for entering new password -->
        <EditText
            android:id="@+id/newPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="New Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:layout_below="@id/changePasswordDescription"
            android:layout_marginTop="24dp"
            android:background="@drawable/input_field_background"
            android:textColor="@color/black"
            android:backgroundTint="@color/gray" />

        <!-- EditText for re-entering the new password -->
        <EditText
            android:id="@+id/reenterPasswordInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Re-enter New Password"
            android:inputType="textPassword"
            android:padding="16dp"
            android:layout_below="@id/newPasswordInput"
            android:layout_marginTop="16dp"
            android:background="@drawable/input_field_background"
            android:textColor="@color/black"
            android:backgroundTint="@color/gray" />

        <!-- Button to change the password -->
        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:layout_below="@id/reenterPasswordInput"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white" />

    </RelativeLayout>

    <!-- Watermark at lower middle -->
    <TextView
        android:id="@+id/watermarkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed By GKCT Info Solutions"
        android:textSize="14sp"
        android:textColor="#80FFFFFF"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingBottom="16dp"
        android:elevation="10dp" />


</FrameLayout>
