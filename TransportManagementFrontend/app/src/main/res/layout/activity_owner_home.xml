<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OwnerHomeActivity"
    android:background="@drawable/other_background">

    <!-- Header Layout with Logo and Welcome Message -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Logo Image -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo" />

        <!-- Welcome Message -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Welcome Firstname"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Transparent Box for Buttons -->
    <LinearLayout
        android:id="@+id/transparentBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/transparent_rounded_box"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <!-- Grid Layout for Buttons -->
        <GridLayout
            android:id="@+id/buttonGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="2"
            android:rowOrderPreserved="false"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:paddingBottom="20dp"
            android:useDefaultMargins="false">

            <!-- Profile -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btnProfile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/profile"
                    android:background="@null"
                    android:contentDescription="Profile" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Other Services -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btnOtherServices"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/services"
                    android:background="@null"
                    android:contentDescription="Other Services" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Services"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Vehicle Order -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btnVehicleOrder"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/vehicleorder"
                    android:background="@null"
                    android:contentDescription="Vehicle Order And Availability" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Order"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Driver Details -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btnDriverDetails"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/driverdetails"
                    android:background="@null"
                    android:contentDescription="Driver Details" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver Details"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Vehicle Tracking -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btnVehicleTracking"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/vehicletracking"
                    android:background="@null"
                    android:contentDescription="Vehicle Tracking" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Tracking"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Payment History -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btnPaymentHistory"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/paymenthistory"
                    android:background="@null"
                    android:contentDescription="Payment History" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment History"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>
        </GridLayout>

        <!-- Customer Support -->
        <TextView
            android:id="@+id/txtCustomerSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Support"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <!-- WhatsApp and Call Icons -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <ImageButton
                android:id="@+id/btnWhatsApp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/whatsapp"
                android:background="@null"
                android:contentDescription="WhatsApp Support" />

            <ImageButton
                android:id="@+id/btnCall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/call"
                android:background="@null"
                android:contentDescription="Call Support"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Watermark (fixed at bottom) -->
    <TextView
        android:id="@+id/watermarkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed By GKCT Info Solutions"
        android:textSize="14sp"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
