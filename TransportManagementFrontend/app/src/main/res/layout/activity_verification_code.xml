<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Original Verification Code Layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/other_background"
        android:padding="16dp">

        <!-- "Verification Code" Title -->
        <TextView
            android:id="@+id/verificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verification Code"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp" />

        <!-- Description: Enter the code sent to your email -->
        <TextView
            android:id="@+id/verificationDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the code sent to your email"
            android:textSize="16sp"
            android:textColor="@color/gray"
            android:layout_below="@id/verificationTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <!-- TextView to show the email -->
        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email will appear here"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_below="@id/verificationDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

        <!-- EditText for entering the verification code -->
        <EditText
            android:id="@+id/verificationCodeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Code"
            android:inputType="number"
            android:padding="16dp"
            android:layout_below="@id/emailTextView"
            android:layout_marginTop="24dp"
            android:background="@drawable/input_field_background"
            android:textColor="@color/black"
            android:backgroundTint="@color/gray" />

        <!-- Button to submit the verification code -->
        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_below="@id/verificationCodeInput"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/black"
            android:textColor="@color/white" />

        <!-- Resend Code TextView below the submit button -->
        <TextView
            android:id="@+id/resendCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resend Code"
            android:textColor="@color/selectedColor"
            android:textSize="16sp"
            android:layout_below="@id/submitButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp" />

    </RelativeLayout>

    <!-- Watermark overlay moved to bottom center with white color -->
    <TextView
        android:id="@+id/watermarkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed By GKCT Info Solutions"
        android:textSize="14sp"
        android:textColor="#80FFFFFF"
        android:layout_gravity="bottom|center_horizontal"
        android:paddingBottom="8dp"
        android:elevation="10dp" />

</FrameLayout>
