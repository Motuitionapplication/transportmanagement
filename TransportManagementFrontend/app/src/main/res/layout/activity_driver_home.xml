<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverHomeActivity"
    android:background="@drawable/other_background">

    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo"
            android:contentDescription="Logo" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Welcome Firstname"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/transparentBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/transparent_rounded_box"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <GridLayout
            android:id="@+id/buttonGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="3"
            android:columnCount="2"
            android:rowOrderPreserved="false"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:paddingBottom="20dp"
            android:useDefaultMargins="false">

            <!-- Transit & Customer Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btnTransitCustomerInfo"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/transitcustomerinfo"
                    android:background="@null"
                    android:contentDescription="Transit And Customer Info" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transit And Customer Info"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Service Center -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btnServiceCenter"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/servicecenter"
                    android:background="@null"
                    android:contentDescription="Service Center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Center"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Complaint Section -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btnComplaintSection"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/complaint"
                    android:background="@null"
                    android:contentDescription="Complaint Section" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complaint Section"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Notifications -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btnNotifications"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/notifications"
                    android:background="@null"
                    android:contentDescription="Notifications" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notifications"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Vendor Tracking -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btnVendorTracking"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/vendortracking"
                    android:background="@null"
                    android:contentDescription="Vendor Tracking" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendor Tracking"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>

            <!-- Delivery Confirmation -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="12dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/btnDeliveryConfirmation"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/deliveryconfirmation"
                    android:background="@null"
                    android:contentDescription="Delivery Confirmation" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Confirmation"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"/>
            </LinearLayout>
        </GridLayout>

        <TextView
            android:id="@+id/txtCustomerSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Support"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <ImageButton
                android:id="@+id/btnWhatsApp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/whatsapp"
                android:background="@null"
                android:contentDescription="WhatsApp Support" />

            <ImageButton
                android:id="@+id/btnCall"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/call"
                android:background="@null"
                android:contentDescription="Call Support"
                android:layout_marginStart="20dp"/>
        </LinearLayout>
    </LinearLayout>
    <!-- Watermark (fixed at bottom) -->
    <TextView
        android:id="@+id/watermarkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed By GKCT Info Solutions"
        android:textSize="14sp"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
