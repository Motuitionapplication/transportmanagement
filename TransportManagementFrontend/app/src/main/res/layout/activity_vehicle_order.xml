<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/other_background"

    >

    <!-- Header Title -->
<TextView
android:id="@+id/txtHeader"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Vehicle Order And Availability"
android:textSize="24sp"
android:textStyle="bold"
android:textColor="@android:color/black"
app:layout_constraintTop_toTopOf="parent"
android:layout_marginTop="24dp"
app:layout_constraintStart_toStartOf="parent"
android:layout_marginStart="24dp"/>

    <!-- Transparent Box Container -->
<LinearLayout
android:id="@+id/transparentBox"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginHorizontal="16dp"
app:layout_constraintTop_toBottomOf="@id/txtHeader"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
android:orientation="vertical"
android:gravity="center"
android:background="@drawable/transparent_rounded_box"
android:padding="24dp"
android:minHeight="200dp">

<!-- White Card inside the transparent box -->
<androidx.cardview.widget.CardView
    android:id="@+id/cardOrderInfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Vehicle Icon -->
        <ImageView
            android:id="@+id/imgVehicleIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/vehicleorder"
        android:contentDescription="Vehicle Icon"
        android:layout_marginEnd="16dp"
        android:background="@drawable/circle_background"
        android:padding="8dp"/>

        <!-- Text block -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID: 123456789"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtVehicleNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle No: OD-23-D-5678"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtPickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pickup: OMP,Cuttack,754001"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtDrop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drop: Baramunda,BBSR,751006"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtDistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance: 29.7km"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: â‚¹200"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txtAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Availability: Available"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/holo_green_dark"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

</LinearLayout>

    <!-- Optional: availability status repeated or other actions below -->
<TextView
android:id="@+id/txtStatusNote"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Available or Not Available"
android:textSize="14sp"
android:textColor="@android:color/white"
app:layout_constraintTop_toBottomOf="@id/transparentBox"
app:layout_constraintStart_toStartOf="parent"
android:layout_marginStart="32dp"
android:layout_marginTop="8dp"/>

    <!-- Watermark (fixed at bottom) -->
    <TextView
        android:id="@+id/watermarkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed By GKCT Info Solutions"
        android:textSize="14sp"
        android:textColor="#80FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
